---
const { id, label, type = "text", value = "" } = Astro.props;
---

<style>
.input-group {
  position: relative;
  width: 100%;
  margin: 1.5rem 0;
}

.input-group input {
  width: 100%;
  border: none;
  border-bottom: 2px solid var(--text-primary, #333);
  background: transparent;
  padding: 1rem 0.5rem 0.5rem;
  font-size: 1.125rem;
  color: var(--text-primary);
  outline: none;
}

.input-group label {
  position: absolute;
  left: 0.5rem;
  top: 1rem;
  font-size: 1.125rem;
  color: var(--text-primary, #333);
  transition: all 0.2s ease-in-out;
  pointer-events: none;
}

.input-group input:focus + label,
.input-group input:not(:placeholder-shown) + label {
  top: -0.4rem;
  font-size: 0.875rem;
  color: var(--accent-primary, #0077ff);
}
</style>

<div class="input-group">
  <input 
    id={id} 
    type={type} 
    value={value} 
    placeholder=" "  
  />
  <label for={id}>{label}</label>
</div>
