---
import { supabase } from "@/lib/supabase"

const { data: mainArticle } = await supabase
  .from("draft")
  .select("*")
  .eq("status", "public")
  .order("created_at", { ascending: false })
  .limit(1)
  .single();


let { data: smallArticles } = await supabase
  .from("draft")
  .select("*")
  .eq("status", "public")
  .order("created_at", { ascending: false })
  .range(1, 3);

const { data: categories } = await supabase
  .from("categories").select("*");
---

{(mainArticle || (smallArticles && smallArticles.length > 0)) && (
    <h1>What's New</h1>
  <section class="grid grid-cols-1 lg:grid-cols-12 gap-6 py-8">
    {mainArticle && (
      <a 
        href={`/b/${mainArticle.category}/${mainArticle.slug}`} 
        class="relative group lg:col-span-5 rounded-xl overflow-hidden shadow-lg"
      >
        <img 
          src={mainArticle.thumb} 
          alt={mainArticle.title} 
          class="w-full aspect-video lg:h-full object-cover group-hover:scale-105 transition-transform duration-500" 
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent p-6 flex flex-col justify-end">
          <h2 class="text-xl md:text-2xl font-bold text-white group-hover:text-blue-400 transition">
            {mainArticle.title}
          </h2>
        </div>
      </a>
    )}
    
    {smallArticles && smallArticles.length > 0 && (
      <div class="lg:col-span-5 flex flex-col gap-4">
        {smallArticles.map((article) => (
          <a 
            href={`/b/${article.category}/${article.slug}`} 
            class="flex gap-3 group rounded-lg overflow-hidden hover:bg-gray-50 dark:hover:bg-gray-800 transition"
          >
            <img 
              src={article.thumb} 
              alt={article.title} 
              class="w-28 h-20 object-cover rounded-lg flex-shrink-0 group-hover:scale-105 transition-transform duration-300" 
              loading="lazy"
            />
            <div>
              <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-200 group-hover:text-blue-500 line-clamp-2">
                {article.title}
              </h3>
              {article.desc && (
                <p class="mt-1 text-xs text-gray-600 dark:text-gray-400 line-clamp-2">
                  {article.desc}
                </p>
              )}
            </div>
          </a>
        ))}
      </div>
    )}

    {categories && categories.length > 0 && (
      <aside class="lg:col-span-2 bg-gray-50 dark:bg-gray-900 rounded-xl p-4 shadow-sm">
        <h3 class="text-lg font-semibold mb-3 text-gray-800 dark:text-gray-200">Categories</h3>
        <ul class="space-y-2">
          {categories.map((cat) => (
            <li>
              <a 
                href={`/c/${cat.slug}`} 
                class="block text-sm text-gray-700 dark:text-gray-300 hover:text-blue-600 transition"
              >
                {cat.title}
              </a>
            </li>
          ))}
        </ul>
      </aside>
    )}

    
  </section>
)}
