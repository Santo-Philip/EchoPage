---
import { supabase } from "@/lib/supabase"
import OptimizedImage from "./OptimizedImage.astro";

const { data: featured } = await supabase
  .from("draft")
  .select("*")
  .eq("status", "public")
  .eq("featured", true)
  .order("created_at", { ascending: false })
  .limit(1)
  .single();

let { data: sideArticles } = await supabase
  .from("draft")
  .select("*")
  .eq("status", "public")
  .eq("featured", false)
  .order("created_at", { ascending: false })
  .limit(4);

if (featured) {
    sideArticles = sideArticles?.filter((a: any) => a.id !== featured.id).slice(0, 3) || null;
}
---

{featured && (
  <section class="grid grid-cols-1 md:grid-cols-3 gap-6 py-6">
   
    <a 
      href={`/b/${featured.category}/${featured.slug}`} 
      class="relative md:col-span-2 rounded-xl img-scale overflow-hidden shadow-lg"
    >
      <OptimizedImage
        src={featured.thumb} 
        alt={featured.slug} 
        class="w-full aspect-video md:h-full object-cover" 
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent p-2 md:p-6 flex flex-col justify-end items-start">
        <p class="text-xl text-white md:text-3xl font-bold">
          {featured.title}
        </p>
      </div>
    </a>

    {sideArticles && sideArticles.length > 0 && (
      <div class="flex flex-col gap-4">
        {sideArticles.map((article) => (
          <a 
            href={`/b/${article.category}/${article.slug}`} 
            class="flex gap-3 group rounded-lg overflow-hidden bg-bg-secondary items-center border border-text-muted shadow-2xl transition"
          >
            <OptimizedImage
              src={article.thumb} 
              alt={article.slug} 
              class="aspect-video h-20 w-32 object-cover rounded-lg flex-shrink-0 " 
            />
            <div>
              <h3 class="line-clamp-2">
                {article.title}
              </h3>
            </div>
          </a>
        ))}
      </div>
    )}
  </section>
)}

<style>
    h1,h2,h3 {
        text-align: start;
    }
</style>