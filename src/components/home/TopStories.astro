---
import { supabase } from "@/lib/supabase"
import OptimizedImage from "./OptimizedImage.astro";

const topStories = await supabase.from("draft").select("*").eq("status", "public").order('created_at', { ascending: false }).limit(6).then(res => res.data);
---
{topStories && topStories.length > 0 && (
  <section class="py-8">
    <h1 class="py-4">Top Stories</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {topStories.map((story) => (
        <a href={`/b/${story.category}/${story.slug}`} class="group block rounded-xl overflow-hidden shadow hover:shadow-lg transition">
          <OptimizedImage
            src={story.thumb} 
            alt={story.slug} 
            class="w-full h-48 object-cover group-hover:img-scale" 
          />
          <div class="p-4 bg-bg-secondary">
            <h2 class="text-lg font-semibold text-text-primary">
              {story.title}
            </h2>
            {story.desc && (
              <p class="mt-2 text-sm text-text-secondary line-clamp-3">
                {story.desc}
              </p>
            )}
          </div>
        </a>
      ))}
    </div>
  </section>
)}

<style>
    h1,h2,h3,p {
        text-align: start;
    }
</style>