---
const { id, label, rows = 2, value = "", placeholder = " " } = Astro.props;
---

<div class="relative w-full my-6">
  <textarea
  maxlength="350"
    id={id}
    rows={rows}
    placeholder={placeholder}
    class="peer block w-full resize-y border-b-2 border-text-primary focus:border-accent-primary bg-transparent pt-4 pb-1 px-0 text-lg text-text-primary outline-none"
  >{value}</textarea>
  <label
    for={id}
    class="absolute left-0 top-3 text-text-primary text-lg transition-all
           peer-placeholder-shown:top-5
           peer-placeholder-shown:text-base
           peer-placeholder-shown:text-text-primary
           peer-focus:-top-4
           peer-focus:text-text-primary
           peer-focus:text-sm
           peer-not-placeholder-shown:-top-4
           peer-not-placeholder-shown:text-sm"
  >
    {label}
  </label>
</div>
