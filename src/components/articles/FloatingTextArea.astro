---
const { id, label, rows = 2, value = "", placeholder = " " } = Astro.props;
---

<style>
.textarea-group {
  position: relative;
  width: 100%;
  margin: 1.5rem 0;
}

.textarea-group textarea {
  width: 100%;
  resize: vertical;
  border: none;
  border-bottom: 2px solid var(--text-primary, #333);
  background: transparent;
  padding: 1rem 0.5rem 0.5rem;
  font-size: 1.125rem;
  color: var(--text-primary);
  outline: none;
  min-height: 3rem;
}

.textarea-group label {
  position: absolute;
  left: 0.5rem;
  top: 1rem;
  font-size: 1.125rem;
  color: var(--text-primary, #333);
  transition: all 0.2s ease-in-out;
  pointer-events: none;
}

.textarea-group textarea:focus + label,
.textarea-group textarea:not(:placeholder-shown) + label {
  top: -0.4rem;
  font-size: 0.875rem;
  color: var(--accent-primary, #0077ff);
}

</style>

<div class="textarea-group">
  <textarea 
    id={id} 
    name={id}
    rows={rows} 
    placeholder=" "  
    maxlength="350"
  >{value}</textarea>
  <label for={id}>{label}</label>
</div>
