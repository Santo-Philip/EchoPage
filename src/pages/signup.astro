---
import Layout from "@/layouts/Layout.astro";
const siteName = import.meta.env.NAME || "EchoPage";
---

<Layout 
  title="Register"  
  desc="Register your account to start writing. Only approved users can publish here."
>
  <section class="flex items-center justify-center min-h-screen bg-background">
    <div class="w-full max-w-md bg-bg-secondary shadow-lg rounded-2xl p-8">
      <div class="flex flex-col items-center mb-6">
        <img src="/logo.png" width="60" height="60" alt={`${siteName} Logo`} class="mb-3" />
        <h1 class="text-2xl font-bold text-text-primary">{siteName}</h1>
        <p class="text-sm text-text-muted">Create your account</p>
      </div>

      <form class="flex flex-col gap-4" method="post" action="api/auth/signup">

        <div class="flex flex-col">
          <label for="username" class="mb-1 text-sm font-medium text-text-primary">Username</label>
          <input 
            type="text" 
            id="username" 
            placeholder="Enter your username"
            class="w-full rounded-xl border border-text-muted bg-transparent px-3 py-2 text-base text-text-primary focus:border-accent-primary focus:ring-2 focus:ring-accent-primary/30 outline-none transition"
          />
        </div>


        <div class="flex flex-col">
          <label for="password" class="mb-1 text-sm font-medium text-text-primary">Password</label>
          <input 
            type="password" 
            id="password" 
            placeholder="Enter your password"
            class="w-full rounded-xl border border-text-muted bg-transparent px-3 py-2 text-base text-text-primary focus:border-accent-primary focus:ring-2 focus:ring-accent-primary/30 outline-none transition"
          />
        </div>

   
        <div class="flex flex-col">
          <label for="confirm-password" class="mb-1 text-sm font-medium text-text-primary">Confirm Password</label>
          <input 
            type="password" 
            id="confirm-password" 
            placeholder="Re-enter your password"
            class="w-full rounded-xl border border-text-muted bg-transparent px-3 py-2 text-base text-text-primary focus:border-accent-primary focus:ring-2 focus:ring-accent-primary/30 outline-none transition"
          />
        </div>

      
        <button 
          type="submit" 
          class="mt-4 w-full rounded-xl bg-accent-primary px-4 py-2 text-white font-semibold shadow-md hover:bg-accent-secondary focus:ring-2 focus:ring-offset-2 focus:ring-accent-primary transition"
        >
          Register
        </button>
      </form>

      <p class="mt-6 text-center text-sm text-text-muted">
        Already have an account? 
        <a href="/login" class="text-accent-primary hover:underline">Login</a>
      </p>
    </div>
  </section>
</Layout>
