---
import Layout from "@/layouts/Layout.astro";
import { supabase } from "@/lib/supabase";

const { data, error } = await supabase.auth.getUser();
if (error || !data.user?.id) {
  return Astro.redirect("/");
}
const user = {
  name: data.user?.user_metadata.full_name,
  email: data.user?.email,
  id: data.user?.id,
};
const emails: string[] = import.meta.env.EMAIL.split(",");
if (!emails.includes(user.email || '')) {
  return Astro.redirect("/");
}

const { data: reviewData, error: reviewError } = await supabase
  .from("draft")
  .select("*")
  .eq("status", "pending")
  .order("created_at", { ascending: false });

const successMsg = Astro.url.searchParams.get("success");
const errorMsg = Astro.url.searchParams.get("error");

---
<Layout title="Post Review" desc="Review and manage posts">
  <section class="max-w-screen-lg min-h-screen mx-auto px-2 py-8">

    {successMsg && (
      <div class="bg-green-500 text-white p-4 rounded-md mb-4">
        {successMsg}
      </div>
    )
    }
    {errorMsg && (
      <div class="bg-red-500 text-white p-4 rounded-md mb-4">
        {errorMsg}
      </div>
    )}
    <h1 class="text-3xl font-bold text-gray-900">Post Management</h1>
    <p class="text-text-secondary text-sm mb-4">
        Manage all post and approve or review posts here.
    </p>
    {reviewError && (
      <p class="text-red-500">Error loading posts: {reviewError.message}</p>
    )}
    {reviewData && reviewData.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
        {reviewData.map((post) => (
          <div class="border border-text-muted rounded-2xl shadow-sm" id={post.id}>
            <a href={`/draft/${post.id}`}>
            <img
              src={post.thumb || '/default-thumb.png'}
              alt={post.title || 'Thumbnail'}
              class="aspect-video rounded-2xl object-cover mb-4"
            />
            <h2 class="font-medium text-lg p-2">{post.title || "Untitled"}</h2>
            <p class="text-text-secondary flex-grow p-2">{post.desc || "No description provided."}</p>
            </a>
            <div class="mt-4 flex">
                <form action="/api/crud/data/review" class="w-full" method="post">
                  <input type="hidden" name="id" value={post.id} />
                  <input type="hidden" name="status" value="public" />
              <button
                class="bg-blue-500 w-full hover:bg-blue-600 text-white p-4 text-center rounded-bl-xl text-sm shadow transition"
              >
                Accept
              </button>
              </form>
              <form action="/api/crud/data/review" class="w-full" method="post">
                  <input type="hidden" name="id" value={post.id} />
                  <input type="hidden" name="status" value="reject" />
              <button
                class="bg-red-500 w-full hover:bg-red-600 text-white p-4 text-center rounded-br-xl text-sm shadow transition"
              >
                Reject
              </button>
              </form>
            </div>
          </div>
        ))}
      </div>
    ) : (
      <p class="text-gray-500">No posts pending review.</p>
    )}
  </section>
</Layout>