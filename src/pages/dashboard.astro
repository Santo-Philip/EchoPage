---
import Layout from "@/layouts/Layout.astro";

const user = {
  name: "John Doe", // Later this will come from Supabase auth
  email: "john@example.com"
};
---

<Layout title="Dashboard " desc="Welcome to your dashboard">
  <section class="max-w-screen-md mx-auto p-2">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Welcome back, {user.name} üëã</h1>
        <p class="text-gray-600">Manage your posts and account settings here.</p>
      </div>
      <button class="bg-red-500 hover:bg-red-600 text-white font-medium px-5 py-2 rounded-xl">
        Logout
      </button>
    </div>

    <!-- Stats Section -->
    <div class="flex gap-4 mt-8">
      <div class="bg-white shadow w-full rounded-2xl p-6">
        <h2 class="text-lg font-semibold text-gray-700">Posts</h2>
        <p class="text-2xl font-bold text-gray-900 mt-2">12</p>
      </div>
      <div class="bg-white w-full shadow rounded-2xl p-6">
        <h2 class="text-lg font-semibold text-gray-700">Drafts</h2>
        <p class="text-2xl font-bold text-gray-900 mt-2">3</p>
      </div>
      <div class="bg-white w-full shadow rounded-2xl p-6">
        <h2 class="text-lg font-semibold text-gray-700">Views</h2>
        <p class="text-2xl font-bold text-gray-900 mt-2">4.2k</p>
      </div>
      <div class="bg-white w-full shadow rounded-2xl p-6">
        <h2 class="text-lg font-semibold text-gray-700">Followers</h2>
        <p class="text-2xl font-bold text-gray-900 mt-2">512</p>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Quick Actions</h2>
      <div class="p-2 flex justify-center gap-6">
        <a href="/editor" class="bg-blue-500 hover:bg-blue-600 text-white font-medium p-6 rounded-2xl text-center">
          ‚úçÔ∏è Write New Post
        </a>

      </div>
    </div>
  </section>
</Layout>
